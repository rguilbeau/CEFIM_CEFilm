<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="#F4F4F4"
    android:id="@+id/main_layout">

    <TextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_title"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/main_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_subtitle"
        android:layout_below="@id/main_title"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp" />

    <ScrollView
        android:id="@+id/main_movies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_subtitle"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <fr.romainguilbeau.cefilm.components.MovieView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:poster="@drawable/bttf"
                app:title="Back to the future"
                app:release="30 octobre 1985" />

            <fr.romainguilbeau.cefilm.components.MovieView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:poster="@drawable/alien"
                app:title="Alien, le huitiÃ¨me passager"
                app:release="12 septembre 1979" />
        </LinearLayout>

    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/main_movies"
        android:layout_alignRight="@id/main_movies"
        android:text="@string/main_search"
        android:layout_alignEnd="@id/main_movies" />


</RelativeLayout>